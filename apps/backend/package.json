{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "prisma db push && vite",
    "build": "rimraf dist && vite build --ssr && mkdir -p dist/node_modules/swagger-ui-dist && cp -rL node_modules/swagger-ui-dist/ dist/node_modules",
    "start": "NODE_ENV=production node dist/index.js",
    "prepare": "prisma generate",
    "migrate:prod": "prisma migrate deploy",
    "migrate:prod:reset": "prisma migrate reset --force && npm run migrate:prod"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "express": "^4.19.2",
    "express-zod-api": "^20.3.2",
    "zod": "^3.23.8",
    "http-errors": "^2.0.0",
    "swagger-ui-express": "^5.0.1",
    "@auth/express": "^0.5.6",
    "@prisma/client": "^5.16.2",
    "@auth/prisma-adapter": "^2.4.1"
  },
  "devDependencies": {
    "@nitedani/vite-plugin-node": "2.0.0-alpha.5",
    "vite": "v6.0.0-alpha.18",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "@types/http-errors": "^2.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "swagger-ui-dist": "^5.17.14",
    "prisma": "^5.16.2"
  }
}